FROM python:3.10-slim

WORKDIR /app

# Install dependencies
COPY drift-monitor/requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt

# Copy the drift monitor script
COPY drift_monitor.py /app/drift_monitor.py

# Create data + reports directories (safety)
RUN mkdir -p /app/data /app/reports

# Expose Prometheus port
EXPOSE 9001

# Run the drift monitor
CMD ["python", "/app/drift_monitor.py"]
