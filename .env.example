# =============================================================================
# Crypto Volatility Detection - Environment Configuration Template
# =============================================================================
# Copy this file to .env and customize values as needed:
#   cp .env.example .env
#
# DO NOT commit .env to version control (it's in .gitignore)
# =============================================================================

# -----------------------------------------------------------------------------
# Model Configuration
# -----------------------------------------------------------------------------
# Model variant: "ml" for trained model, "baseline" for z-score fallback
MODEL_VARIANT=ml

# Model version to load (directory under models/artifacts/)
# Options: random_forest, logistic_regression, baseline
MODEL_VERSION=random_forest

# -----------------------------------------------------------------------------
# Kafka Configuration
# -----------------------------------------------------------------------------
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# -----------------------------------------------------------------------------
# MLflow Configuration
# -----------------------------------------------------------------------------
MLFLOW_TRACKING_URI=http://localhost:5001
MLFLOW_EXPERIMENT_NAME=crypto-volatility-detection

# -----------------------------------------------------------------------------
# Grafana Configuration
# -----------------------------------------------------------------------------
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
GIT_SHA=dev

# -----------------------------------------------------------------------------
# Data Paths
# -----------------------------------------------------------------------------
RAW_DATA_PATH=data/raw
PROCESSED_DATA_PATH=data/processed
FEATURES_PATH=data/processed/features_sample.parquet

# -----------------------------------------------------------------------------
# WebSocket Ingestion
# -----------------------------------------------------------------------------
WS_PAIR=BTC-USD

# -----------------------------------------------------------------------------
# Feature Engineering
# -----------------------------------------------------------------------------
FEATURE_WINDOWS=30,60,300
SPIKE_THRESHOLD=2.0
