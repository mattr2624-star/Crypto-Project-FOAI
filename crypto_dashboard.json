{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "panels": [
    {
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "short"
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "id": 1,
      "options": {
        "legend": { "showLegend": true },
        "tooltip": { "mode": "single" }
      },
      "targets": [
        {
          "expr": "rate(http_requests_total[1m])",
          "legendFormat": "Requests per second",
          "refId": "A"
        }
      ],
      "title": "Model Server Request Rate",
      "type": "timeseries"
    },
    {
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "continuous-GrYlRd" },
          "unit": "s"
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "id": 2,
      "options": {
        "legend": { "showLegend": true },
        "tooltip": { "mode": "single" }
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "P95 Latency (s)",
          "refId": "A"
        }
      ],
      "title": "Model Server Latency (95th percentile)",
      "type": "timeseries"
    },
    {
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "msgs"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "id": 3,
      "options": { "legend": { "showLegend": true } },
      "targets": [
        {
          "expr": "sum(kafka_topic_partition_current_offset) by (topic)",
          "legendFormat": "{{topic}}",
          "refId": "A"
        }
      ],
      "title": "Kafka Topic Message Offsets",
      "type": "timeseries"
    },
    {
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "none"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "id": 4,
      "options": { "legend": { "showLegend": true } },
      "targets": [
        {
          "expr": "up{job=\"mlflow\"}",
          "legendFormat": "MLflow",
          "refId": "A"
        },
        {
          "expr": "up{job=\"model-server\"}",
          "legendFormat": "Model Server",
          "refId": "B"
        },
        {
          "expr": "up{job=\"kafka-exporter\"}",
          "legendFormat": "Kafka Exporter",
          "refId": "C"
        }
      ],
      "title": "Service Uptime (Prometheus up metric)",
      "type": "timeseries"
    }
  ],
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["crypto-volatility", "mlflow", "kafka", "prometheus"],
  "templating": { "list": [] },
  "time": { "from": "now-15m", "to": "now" },
  "title": "Crypto Volatility Monitoring",
  "uid": "crypto-volatility",
  "version": 1
}
