{
  "dashboard": {
    "id": null,
    "uid": "model-server-metrics",
    "title": "Model Server Metrics",
    "tags": ["model-server", "prometheus"],
    "timezone": "browser",
    "schemaVersion": 37,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "type": "stat",
        "title": "Total Predictions",
        "gridPos": {"x":0,"y":0,"w":12,"h":5},
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "sum(http_requests_total{endpoint=\"/predict\", http_status=\"200\", method=\"POST\"})",
            "legendFormat": "Total predictions",
            "refId": "A"
          }
        ],
        "fieldConfig": {"defaults": {"unit": "none"}}
      },
      {
        "type": "graph",
        "title": "Prediction Rate (per sec)",
        "gridPos": {"x":12,"y":0,"w":12,"h":5},
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rate(http_requests_total{endpoint=\"/predict\", http_status=\"200\", method=\"POST\"}[1m])",
            "legendFormat": "Predictions/sec",
            "refId": "A"
          }
        ],
        "yaxis": {"format": "short"}
      },
      {
        "type": "graph",
        "title": "Average Prediction Latency (s)",
        "gridPos": {"x":0,"y":5,"w":12,"h":5},
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rate(http_request_duration_seconds_sum{endpoint=\"/predict\"}[1m]) / rate(http_request_duration_seconds_count{endpoint=\"/predict\"}[1m])",
            "legendFormat": "Avg latency",
            "refId": "A"
          }
        ],
        "yaxis": {"format": "s"}
      },
      {
        "type": "graph",
        "title": "95th Percentile Latency (s)",
        "gridPos": {"x":12,"y":5,"w":12,"h":5},
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{endpoint=\"/predict\"}[1m]))",
            "legendFormat": "95th percentile",
            "refId": "A"
          }
        ],
        "yaxis": {"format": "s"}
      }
    ]
  }
}
